package framework.helpers
{

public class HTMLHelper extends Object
{
	
	public function HTMLHelper()
	{
		super();
	}
	
	public static function getImgTags( string:String ):Array
	{
		var myRegExp:RegExp = /<img[^>]*>/igm;
		var output:Array = myRegExp.exec(string);
		var tokens:Array = [];

		while(output != null) 
		{
			tokens.push( output[0] );
		    output = myRegExp.exec(string);
		}
		
		return tokens;
	}
}

}

