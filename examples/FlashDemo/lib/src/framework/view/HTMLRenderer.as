package framework.view
{
	import framework.controller.Controller;
	import framework.view.html.Navigator;
	import framework.view.html.Window;
	
	public class HTMLRenderer extends RendererBase
	{
	
		private var navigator:Navigator;
		private var window:Window;
		
		public function HTMLRenderer( controller:Controller, width:int, height:int )
		{
			super( controller, width, height );
			
			navigator = new Navigator( controller );
			window = new Window( navigator, width, height );
			addChild( window );
		}
		
		override public function render( source:String ):void
		{
			window.frames[0].getLayer(0).innerHTML = source;
			// dispatchEvent( new Event( RENDERED ) );
		}
		
		override public function update( width:int, height:int ):void
		{
			window.resizeTo( width, height );
		}		
	}
}