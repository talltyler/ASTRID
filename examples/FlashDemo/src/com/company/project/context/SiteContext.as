package com.company.project.context{	import flash.display.MovieClip;	import flash.net.navigateToURL;	import flash.net.URLRequest;	import framework.controller.ContextBase;	import framework.helpers.Paginator;	import com.company.project.renderers.*;	import com.company.project.data.Image;	public class SiteContext extends ContextBase	{		public function home( params:Object ):void		{			data.title = "Welcome to ASTRID.";			data.description = "This is a simple example of how the framework can be used.";			render( HomeRenderer );		}		public function gallery( params:Object ):void		{			data.images = new Paginator( Image.data.all(), params.page||1, params.per||6 );			render( GalleryRenderer );		}				public function contact( params:Object ):void		{			if( params.email == null ) {				render( ContactRenderer );			}else{				var mailTo:URLRequest = 					new URLRequest("mailto:your@email.com?subject="+params.subject+						"&body=from:"+params.name+"\n"+params.email+"\n"+params.message );				navigateToURL( mailTo );				view.thanks_txt.visible = true;				view.window.visible = false;			}		}	}}