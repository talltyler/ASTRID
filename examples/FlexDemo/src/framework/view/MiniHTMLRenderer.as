package framework.view 
{
	import framework.controller.Controller;
	import framework.view.miniHTML.MiniHTML;
	import framework.view.RendererBase;
	import flash.events.Event;
	
	public class MiniHTMLRenderer  extends RendererBase
	{
		public var document:MiniHTML;
		
		public function MiniHTMLRenderer( controller:Controller, width:int, height:int  )
		{
			super( controller, width, height );
			
			document = new MiniHTML( width, height );
			addChild( document );
		}
		
		override public function render( source:String ):void
		{
			super.render( source );

			document.styleSheet = controller.assets.fetch( "simple-styles" );
			document.innerHTML = source;
			// setup();
			
			dispatchEvent( new Event( RENDERED ) );
		}
		
		
		override public function update( width:int, height:int ):void
		{
			document.update( width, height );
		}
	}
}