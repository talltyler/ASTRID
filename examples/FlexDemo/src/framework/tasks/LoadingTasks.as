package framework.tasks
{
import flash.events.ProgressEvent;
import framework.display.Base;
import com.greensock.TweenLite;
import framework.debug.Log;

public class LoadingTasks extends TasksBase
{
	private var target:Base;
	
	public function LoadingTasks()
	{
		super();
	}
	
	override public function start( ...params ):void
	{
		target = Base(params[0]);
		target.alpha = 0;
		TweenLite.to( target, 3, {alpha:1} );
		target.addEventListener( ProgressEvent.PROGRESS, onProgress );
	}
	
	private function onProgress( event:ProgressEvent ):void
	{
		// // Log.info( event.bytesTotal, event.bytesLoaded, "Loading" )
		// TODO: draw a loading bar or amount loaded over top loading image
	}
}

}