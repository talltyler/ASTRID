package framework.tasks
{
import framework.cache.Cache;
import framework.utils.ClassUtils;

public class Tasks extends Object
{
	public var _cache:Cache;
	
	public function Tasks( cache:Cache )
	{
		super();
		
		if( cache.tasks == null ) {
			cache.tasks = {};
		}
		
		_cache = cache;
	}
	
	public function add( task:Class ):void
	{
		_cache.tasks[ ClassUtils.className( task ) ] = task;
	}
}

}