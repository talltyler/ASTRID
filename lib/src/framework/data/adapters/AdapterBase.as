package framework.data.adapters 
{
	import flash.events.EventDispatcher;
	
	import framework.data.ModelBase;
	import framework.cache.Cache;
	import framework.data.Data;
	import framework.net.Assets;
	
	public class AdapterBase extends EventDispatcher
	{
		internal var assets:Assets
		internal var model:ModelBase
		internal var data:Data
		internal var cache:Cache
		
		public function AdapterBase( model:ModelBase, cache:Cache, data:Data )
		{
			super();

			this.model = model;
			this.cache = cache;
			this.data = data;
			assets = new Assets( cache );
		}
		
		public function export( id:int=-1, params:Object=null ) : String
		{
			var clazz:* = data.getClass( model.className );
			return clazz["all"]().toString();
		}
		
		/* // Adapters should have a load method as well.
		public function load(path:String):void {}
		*/
	}
}